<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorAccent">@color/blue_grey</item>
        <item name="colorAccent">@color/blue_grey</item>
        <item name="android:colorControlHighlight">@color/blue_grey</item>
        <item name="colorControlHighlight">@color/blue_grey</item>
        <item name="android:textViewStyle">@style/RobotoTextStyleView</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>
    
    <style name="RobotoTextStyleView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="RobotoButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
